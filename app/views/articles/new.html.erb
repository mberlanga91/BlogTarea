#encoding: utf-8

<h1>Crear artículo</h1>
<%= form_for(@article) do |f| %>
    <% @article.errors.full_messages.each do |message| %>
        <div> * <%= message %></div>
    <%end%>
    <div class="field">
      <%= f.text_field :title, placeholder: "Título" %>
    </div>
    <div class="field">
      <%= f.text_area :body, placeholder: "Escribe aquí", style:"height:250px" %>
    </div>
    <div class="field">
      <%= f.submit "Guardar" %>
    </div>
<%end%>

